{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ClientHeartbeatPayload",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": ["client.heartbeat"],
      "description": "Type of payload - must be client.heartbeat"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp of the heartbeat"
    }
  },
  "required": ["type"]
}
